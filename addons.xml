<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon
  id="adsp.basic"
  version="0.0.1"
  name="Audio DSP Basic Processor"
  provider-name="Team KODI">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="kodi.adsp" version="0.0.1"/>
  </requires>
  <extension
    point="kodi.adsp"
    library_linux="adsp.basic.so"
    library_osx="adsp.basic.dylib"
    library_wingl="adsp.basic.dll"
    library_windx="adsp.basic.dll"
    library_android="libadsp.basic.so" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Basic Audio DSP Processor</summary>
    <description lang="en">Basic Audio DSP Processor</description>
    <disclaimer lang="en">Just contains stubs</disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon
  id="adsp.freesurround"
  version="0.0.1"
  name="Free Surround Processor"
  provider-name="Team KODI">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="kodi.adsp" version="0.0.1"/>
  </requires>
  <extension
    point="kodi.adsp"
    library_linux="adsp.freesurround.so"
    library_osx="adsp.freesurround.dylib"
    library_wingl="adsp.freesurround.dll"
    library_windx="adsp.freesurround.dll"
    library_android="libadsp.freesurround.so" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Free Surround Audio DSP Processor</summary>
    <description lang="en">Free Surround Audio DSP Processor</description>
    <disclaimer lang="en">This is a open source audio dsp processing system</disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon
  id="adsp.template"
  version="0.0.1"
  name="Audio DSP Template"
  provider-name="Team KODI">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="kodi.adsp" version="0.0.1"/>
  </requires>
  <extension
    point="xbmc.adspaddon"
    library_linux="adsp.template.so"
    library_osx="adsp.template.dylib"
    library_wingl="adsp.template.dll"
    library_windx="adsp.template.dll"
    library_android="libadsp.template.so" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Template for a Audio DSP Addon</summary>
    <description lang="en">You can use this template to see how the ADSP Addon API works or to start a new ADSP Addon.[CR]Preprocessing/Postprocessing only copies input to output.[CR]Master process implements a simple channel upmixer (e.g. stereo to 5.1) by copying the input channel to output channels.</description>
    <disclaimer lang="en">Just contains one Preprocess-, Masterprocess- and Postprocess-Mode.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.audiodsp.addons" name="Audio DSP Addons" version="0.0.1" provider-name="AudioDSP Addons">
	<extension point="xbmc.addon.repository" name="Achim's Audio DSP repository">
			<info compressed="false">https://raw.githubusercontent.com/AchimTuran/kodi-adsp-addons-repo/master/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/AchimTuran/kodi-adsp-addons-repo/master/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/AchimTuran/kodi-adsp-addons-repo/master/</datadir>
		</extension>
		<extension point="xbmc.addon.metadata">
		<summary>Install Audio DSP Add-ons from Achim's repository.</summary>
		<description>Download Audio DSP addons and have fun ;)</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
